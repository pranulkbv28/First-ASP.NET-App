@model MyApp.Models.Item
@{
    ViewData["Title"] = "Create";
}

<h3>Create an Item</h3>

<form asp-action="Create" method="post" >
    <div class="d-flex flex-column mb-4">
        <label for="Name" class="mb-2">Name</label>
        <input class="w-50 p-2" type="text" asp-for="Name" />
    </div>
    <div class="d-flex flex-column mb-4">
        <label for="Price" class="mb-2">Price</label>
        <input class="w-50 p-2" type="text" asp-for="Price" />
    </div>
    <div class="d-flex flex-column mb-4">
        <label for="CategoryId" class="mb-2">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">

        </select>
    </div>
    <button class="bg-primary mt-2 rounded-3 border-0 p-1 text-white" type="submit">Submit</button>
</form>
